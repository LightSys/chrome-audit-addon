{
  "manifest_version": 2,
  "name": "Chrome Audit Addon",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon/icon48x48.png",
    "default_popup": "popup.html",
    "default_title": "Addon Auditor"
  },
  
  "background": {
    "scripts": ["checkAddons.js"],
    "persistent": false
  },

  "permissions": [
    "management"
  ]
}
